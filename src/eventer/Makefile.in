CC=@CC@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
DEPFLAGS=@DEPFLAGS@
AR=@AR@
RANLIB=@RANLIB@
LIBS=@LIBS@
INSTALL=@INSTALL@

top_srcdir=@top_srcdir@

OBJS=	eventer.o eventer_impl.o \
	@EVENTER_OBJS@ \
	eventer_POSIX_fd_opset.o \
	eventer_SSL_fd_opset.o OETS_asn1_helper.o \
	eventer_jobq.o

all:	libeventer.a

@DTRACEOBJ@:    $(OBJS)
	@-test -n "@DTRACE@" && \
		@DTRACE@ @DTRACEFLAGS@ -G -s dtrace_probes.d -o @DTRACEOBJ@ $(OBJS)

noit_log.o:     @DTRACEHDR@

@DTRACEHDR@:    dtrace_probes.d
	@-test -z "@DTRACE@" && cp ./@DTRACEHDR@.stock ./@DTRACEHDR@
	@-test -n "@DTRACE@" && @DTRACE@ -h -s dtrace_probes.d

libeventer.a:	$(OBJS) @DTRACEOBJ@
	@rm -f $@
	@$(AR) cq $@ $(OBJS) @DTRACEOBJ@
	@echo "- archiving $@"
	@$(RANLIB) $@

$(OBJS):	@DTRACEHDR@

.c.o:
	@$(CC) $(CPPFLAGS) $(CFLAGS) -c $<
	@echo "- compiling $<"

clean:
	rm -f *.o libeventer.a

distclean:	clean
	rm -f Makefile

Makefile.dep:
	$(CC) -I. -I.. $(CPPFLAGS) $(CFLAGS) $(DEPFLAGS) *.c > Makefile.dep
	$(top_srcdir)/buildtools/culldeps.sh Makefile.dep

include Makefile.dep
